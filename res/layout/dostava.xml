<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_height="fill_parent"
   android:layout_width="250dip">
   
    <TextView
        android:id="@+id/txtViewEmailTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Naslov naslovnika"/>
    <AutoCompleteTextView android:layout_height="wrap_content" android:id="@+id/editTxtTo" android:layout_width="match_parent"></AutoCompleteTextView>
 
    <TextView
        android:id="@+id/txtViewEmailSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Tema"/>
       
    <EditText
        android:id="@+id/editTxtSubject"
        android:layout_height="wrap_content" android:layout_width="match_parent"/>
    <TextView
        android:id="@+id/txtViewEmailBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Telo sporočila"/>
    <EditText
        android:id="@+id/editTxtBody"
        android:layout_column="0"
        android:layout_height="120dip" android:layout_width="match_parent"/>
    <Button android:id="@+id/btnEmailSend"
        android:layout_column="0"
        android:layout_height="wrap_content"
        android:text="Pošlji" android:layout_gravity="center" android:layout_width="match_parent"/>
</LinearLayout>
</ScrollView>