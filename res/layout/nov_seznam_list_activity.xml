<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:paddingLeft="8dp"
         android:paddingRight="8dp">
     <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
         <Button android:text="Dodaj izdelek" android:id="@+id/dodajIzdelek" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
     </LinearLayout>

     <TextView android:id="@id/android:empty"
               android:layout_width="match_parent"
               android:background="#FF0000"
               android:layout_height="100dip" android:text="Ni podatkov, prosim, dodajte izdelek"/>
     <ListView android:id="@id/android:list" android:drawSelectorOnTop="false" android:layout_width="match_parent" android:layout_weight="1" android:layout_height="wrap_content"></ListView>
 </LinearLayout>
