<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/vpis"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="10dp"
              android:orientation="vertical">
    <LinearLayout android:id="@+id/linearLayout1" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_weight="0" android:layout_width="250dip" >
        <TextView android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_weight="1" android:text=" Ime " android:layout_width="match_parent" android:layout_gravity="center"></TextView>
        <EditText android:layout_height="wrap_content" android:id="@+id/imeNovegaIzdelkaEditText" android:layout_width="match_parent" android:layout_gravity="center" android:layout_weight="0.35"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="250dip" >
        <TextView android:id="@+id/textView2" android:layout_height="wrap_content" android:layout_weight="1" android:text="Cena" android:layout_width="match_parent" android:layout_gravity="center"></TextView>
        <EditText android:layout_height="wrap_content" android:id="@+id/cenaNovegaIzdelkaEditText" android:numeric="decimal" android:layout_width="match_parent" android:layout_gravity="center" android:layout_weight="0.35"></EditText>
    </LinearLayout>
    <LinearLayout android:layout_width="250dip" android:id="@+id/LinearLayout01" android:layout_height="wrap_content" >
        <TextView android:layout_width="wrap_content" android:id="@+id/TextView01" android:layout_height="wrap_content" android:text="Kolicina" android:layout_weight="1" android:layout_gravity="center"></TextView>
        <EditText android:layout_height="wrap_content" android:id="@+id/kolicinaTextEdit" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_weight="5"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="250dip" android:layout_gravity="left|center">
        <Button android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:text="Vpiši" android:id="@+id/potrdiNovIzdelek"></Button>
        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_vertical" android:layout_weight="1" android:text="Prekliči" android:id="@+id/zavrniNovIzdelek"></Button>
    </LinearLayout>
    
</LinearLayout>